{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Configururation Items",
    "type": "object",
    "properties":
    {
		"kernels":
		{
			"type": "object",
			"properties":
			{
				"residual": {
					"type": "string",
					"pattern": "fortran|c++"
				}
			}
		},
		"log":
		{
			"type": "array",
			"items":
			{
				"type": "string",
				"pattern": "error|status|info|warn"
			}
		},
		"solver":
		{
			"type": "object",
			"properties":
			{
				"cycle":
				{
					"type": "object",
					"properties":
					{
						"nrelax-pre" : {"type": "integer"},
						"nrelax-post" : {"type": "integer"}
					}
				},
				"tol"
				{
					"type": "integer"
				},
				"max-iter":
				{
					"type": "integer"
				},
				"min-coarse":
				{
					"type": "integer"
				},
				"num-levels":
				{
					"type": "integer"
				},
				"cg-solver":
				{
					"type": "string",
					"pattern": "boxmg|LU|redist"
				},
				"relaxation":
				{
					"type": "string",
					"pattern": "point|line-x|line-y|line-xy|plane"
				}
			}
		},
		"grid"
	}
}
